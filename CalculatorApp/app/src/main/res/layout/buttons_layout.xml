<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="505dp"
        android:background="@color/BG_DARK"
        android:columnCount="4"
        android:rowCount="5">

        <Button
            android:id="@+id/clear_btn"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:background="#0000"
            
            android:text="C"
            android:textColor="@color/clear_button"
            android:textSize="25sp" />

        <Button
            android:id="@+id/power_btn"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:background="#0000"
            
            android:text="^"
            android:textColor="@color/arithmetic_buttons"
            android:textSize="25sp" />

        <Button
            android:id="@+id/percent_btn"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:background="#0000"
            
            android:text="%"
            android:textColor="@color/arithmetic_buttons"
            android:textSize="25sp" />

        <Button
            android:id="@+id/divide_btn"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:background="#0000"
            android:text="รท"
            
            android:textColor="@color/arithmetic_buttons"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:background="#0000"
            
            android:text="7"
            android:textColor="@color/numbered_buttons"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:background="#0000"
            
            android:text="8"
            android:textColor="@color/numbered_buttons"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:background="#0000"
            
            android:text="9"
            android:textColor="@color/numbered_buttons"
            android:textSize="25sp" />

        <Button
            android:id="@+id/multiply_btn"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:background="#0000"
            
            android:text="x"
            android:textColor="@color/arithmetic_buttons"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:background="#0000"
            
            android:text="4"
            android:textColor="@color/numbered_buttons"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:background="#0000"
            
            android:text="5"
            android:textColor="@color/numbered_buttons"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:background="#0000"
            
            android:text="6"
            android:textColor="@color/numbered_buttons"
            android:textSize="25sp" />

        <Button
            android:id="@+id/subtraction_btn"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:background="#0000"
            
            android:text="-"
            android:textColor="@color/arithmetic_buttons"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:background="#0000"
            
            android:text="1"
            android:textColor="@color/numbered_buttons"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:background="#0000"
            
            android:text="2"
            android:textColor="@color/numbered_buttons"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:background="#0000"
            
            android:text="3"
            android:textColor="@color/numbered_buttons"
            android:textSize="25sp" />

        <Button
            android:id="@+id/addition_btn"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:background="#0000"
            
            android:text="+"
            android:textColor="@color/arithmetic_buttons"
            android:textSize="25sp" />

        <Button
            android:id="@+id/point_btn"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:background="#0000"
            
            android:text="."
            android:textColor="@color/numbered_buttons"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:background="#0000"
            android:text="0"
            android:textColor="@color/numbered_buttons"
            android:textSize="25sp" />

        <Button
            android:id="@+id/equals_btn"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:background="#0000"
            android:text="="
            android:textColor="@color/equals_button"
            android:textSize="25sp" />
    </GridLayout>
    
</RelativeLayout>