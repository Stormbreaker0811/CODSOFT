<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ToggleButton
        android:id="@+id/toggleFlashlight"
        android:layout_width="189dp"
        android:layout_height="88dp"
        android:layout_marginTop="232dp"
        android:text="ToggleButton"
        android:textOff="Flashlight OFF"
        android:textOn="Flashlight ON"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flashlightTitle" />

    <TextView
        android:id="@+id/flashlightTitle"
        android:layout_width="375dp"
        android:layout_height="86dp"
        android:text="This is a simple flashlight app!!"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>